{
	"compilerOptions": {
		"module": "commonjs",
		"baseUrl": "./src",
		"paths": {
			"@domain/*": ["domain/*"],
			"@application/*": ["application/*"],
			"@infrastructure/*": ["infrastructure/*"],
			"@interface/*": ["interface/*"]
		},
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2021",
		"sourceMap": true,
		"outDir": "./dist",
		"incremental": true,
		"strict": true,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"strictPropertyInitialization": false
	}
}
